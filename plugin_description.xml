<library path="lib/liboctopus_rviz_plugin">

	<class name="octopus_rviz_plugin/VehicleControl"
		type="octopus_rviz_plugin::VehicleControlDisplay"
		base_class_type="rviz::Display">
		<description>
			Displays vehicle controls
		</description>
	</class>

	<class name="octopus_rviz_plugin/Speed"
		type="octopus_rviz_plugin::SpeedDisplay"
		base_class_type="rviz::Display">
		<description>
			Displays speed
		</description>
	</class>

	<class name="octopus_rviz_plugin/SpeedLimit"
		type="octopus_rviz_plugin::SpeedLimitDisplay"
		base_class_type="rviz::Display">
		<description>
			Displays US speed limit
		</description>
	</class>


	<class name="octopus_rviz_plugin/BoundedFloat"
		type="octopus_rviz_plugin::FloatBoundedDisplay"
		base_class_type="rviz::Display">
		<description>
			Displays bounded float
		</description>
	</class>

	<class name="octopus_rviz_plugin/Dashboard"
		type="octopus_rviz_plugin::DashboardDisplay"
		base_class_type="rviz::Display">
		<description>
			Displays Vehicle Dashboard
		</description>
	</class>


	<class name="octopus_rviz_plugin/OctopusPicker"
		type="octopus_rviz_plugin::OverlayPickerTool"
		base_class_type="rviz::Tool">
		<description>
			Tool to drag and drop octopus overlays in rviz.
			Use SHIFT to switch magnet for overlay dragging.
		</description>
	</class>

</library>
